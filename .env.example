# Server Configuration
PORT=3002
HOST=localhost
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# JWT Configuration
JWT_SECRET=your_jwt_secret_change_in_production
JWT_EXPIRES_IN=30m
REFRESH_TOKEN_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Email Configuration (Resend)
# Sign up at https://resend.com/ to get your API key
RESEND_FROM_EMAIL=onboarding@resend.dev
RESEND_FROM_NAME=Flowence

# Stripe (Optional - for payment processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Mercado Pago (Optional - for Point Mini integration)
# Get credentials from https://www.mercadopago.com/developers/
MERCADO_PAGO_ACCESS_TOKEN=
MERCADO_PAGO_WEBHOOK_SECRET=

# Print Service Configuration (Optional - for thermal printer support)
PRINT_SERVICE_URL=http://localhost:3001
PRINT_SERVICE_API_KEY=
PRINT_SERVICE_TIMEOUT=30000
PRINT_SERVICE_MAX_RETRIES=3
PRINT_SERVICE_RETRY_DELAY=1000

# Feature Flags
ENABLE_EMAIL_INVITES=true
ENABLE_STRIPE_PAYMENTS=false
ENABLE_MERCADO_PAGO=false
ENABLE_THERMAL_PRINTER=false
ENABLE_BARCODE_SCANNER=true
ENABLE_PWA=true
