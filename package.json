{
  "name": "flowence-server",
  "version": "1.0.0",
  "description": "Flowence - All-in-one supermarket management system backend",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc --skipLibCheck",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "test": "tsc --project tsconfig.test.json && jest",
    "test:watch": "jest --watch",
    "test:coverage": "tsc --project tsconfig.test.json && jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "node -e \"const fs = require('fs'); fs.rmSync('dist', { recursive: true, force: true });\"",
    "prebuild": "npm run clean",
    "prestart": "npm run build",
    "db:clean": "ts-node src/scripts/clean-database.ts",
    "db:migrate": "ts-node src/scripts/run-migrations.ts",
    "db:seed": "ts-node src/scripts/seed-database.ts",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "db:reset": "npm run db:clean && npm run db:setup",
    "db:optimize": "ts-node src/scripts/apply-performance-indexes.ts",
    "supabase:init": "ts-node src/scripts/init-supabase.ts",
    "test:jwt": "ts-node src/scripts/test-jwt.ts"
  },
  "keywords": [
    "supermarket",
    "management",
    "inventory",
    "sales",
    "pos",
    "retail"
  ],
  "author": "Flowence Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.38.4",
    "bcryptjs": "^3.0.2",
    "bwip-js": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "resend": "^4.8.0",
    "stripe": "^20.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/bwip-js": "^3.2.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.0",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/pdfkit": "^0.17.3",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
