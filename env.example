NODE_ENV=production
PORT=3000

# Database (prefer single URL in production)
DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/flowence?ssl=true
DB_HOST=
DB_PORT=5432
DB_NAME=flowence
DB_USER=
DB_PASSWORD=

# Security
JWT_SECRET=change_me_to_a_random_32+_char_string
ENCRYPTION_KEY=replace_with_32_char_key_or_base64_32_bytes

# URLs / CORS
APP_URL=https://your-domain.com
API_URL=https://api.your-domain.com
CORS_ORIGIN=https://your-domain.com

# Third-party services
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
# Stripe API Version (use 2025-09-30.clover for local, 2025-10-29.clover for production)
STRIPE_API_VERSION=2025-09-30.clover
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=notifications@your-domain.com

# Logging
LOG_LEVEL=info



